@page "/"
@using System.Net.Http.Json
@inject HttpClient Http

<PageTitle>BlogSharp - Home</PageTitle>

<div class="hero-section">
    <div class="hero-content">
        <h1>BlogSharp</h1>
        <p class="lead">Thoughts, tutorials and updates from the BlogSharp community.</p>
    </div>
</div>

<div class="container mt-4">
    <div class="row">
        <main class="col-md-8">
            @if (isLoading)
            {
                <div class="d-flex align-items-center">
                    <div class="spinner-border me-2" role="status" aria-hidden="true"></div>
                    <div>Loading posts…</div>
                </div>
            }
            else if (posts is null || posts.Count == 0)
            {
                <div class="alert alert-info">No posts yet. Check back soon!</div>
            }
            else
            {
                <div class="posts-grid">
                    @foreach (var p in posts)
                    {
                        <article class="post-card mb-3">
                            <div class="post-header d-flex justify-content-between align-items-start">
                                <div>
                                    <h2 class="post-title mb-1">
                                        <a href="@($"/post/{p.Id}")">@p.Title</a>
                                    </h2>
                                    <div class="post-meta text-muted">@p.CreatedAt.ToString("MMMM d, yyyy")</div>
                                </div>
                                <div class="text-end">
                                    <small class="text-muted">@p.CommentsCount comment@(p.CommentsCount == 1 ? "" : "s")</small>
                                </div>
                            </div>

                            <div class="post-excerpt mt-3">
                                @{
                                    var excerpt = string.IsNullOrWhiteSpace(p.Content) ? "(no content)" :
                                        (p.Content.Length > 220 ? p.Content[..220] + "…" : p.Content);
                                }
                                <p class="mb-0">@excerpt</p>
                            </div>

                            <div class="post-footer mt-3">
                                <a class="btn btn-sm btn-primary" href="@($"/post/{p.Id}")">Read more</a>
                            </div>
                        </article>
                    }
                </div>
            }
        </main>

        <aside class="col-md-4">
            <div class="widget mb-3 p-3">
                <h5>About</h5>
                <p class="mb-0">BlogSharp is a minimal, modern blog built with Blazor WebAssembly and .NET 10.</p>
            </div>

            <div class="widget mb-3 p-3">
                <h5>Tags</h5>
                <div class="d-flex flex-wrap gap-2">
                    <span class="badge bg-secondary">Blazor</span>
                    <span class="badge bg-secondary">.NET</span>
                    <span class="badge bg-secondary">Web</span>
                </div>
            </div>
        </aside>
    </div>
</div>